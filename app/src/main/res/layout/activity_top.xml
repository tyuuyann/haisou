<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopScreenActivity">
    <Button
            android:text="業務用マップ"
            android:layout_width="280dp"
            android:layout_height="70dp" android:id="@+id/map"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="40dp"/>
    <Button
            android:text="顧客リスト"
            android:layout_width="280dp"
            android:layout_height="70dp" android:id="@+id/cust"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/map"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.496" android:textSize="30sp"/>
    <Button
            android:text="スケジュール"
            android:layout_width="280dp"
            android:layout_height="70dp" android:id="@+id/skj"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/cust"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.496" android:textSize="30sp"/>
    <Button
            android:text="配送管理"
            android:layout_width="280dp"
            android:layout_height="70dp" android:id="@+id/haisou"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginBottom="168dp"
            app:layout_constraintTop_toBottomOf="@+id/skj" android:layout_marginTop="40dp" android:textSize="30sp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="APP LOGO"
            android:layout_width="283dp"
            android:layout_height="44dp" android:id="@+id/textView2"
            tools:layout_editor_absoluteX="65dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" android:gravity="center" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>